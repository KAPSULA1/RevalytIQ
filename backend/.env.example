# =============================================================================
# RevalytIQ Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values.
# SECURITY WARNING: never commit .env to version control.

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=change-me-to-a-strong-random-secret-key-in-production
DJANGO_DEBUG=False
ENVIRONMENT=production
DJANGO_SETTINGS_MODULE=revalyt.settings.prod
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com
# Optional legacy fallback for tooling that still expects SECRET_KEY
SECRET_KEY=

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# Prefer DATABASE_URL in production (Render, Docker, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/revalytiq
# Discrete settings are used when DATABASE_URL is absent
POSTGRES_DB=revalytiq
POSTGRES_USER=revalytiq
POSTGRES_PASSWORD=securepassword
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis & Celery
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# Static & Media
# -----------------------------------------------------------------------------
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# -----------------------------------------------------------------------------
# CORS & Security
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3100,https://your-app.vercel.app
CSRF_TRUSTED_ORIGINS=http://localhost:3100,https://your-app.vercel.app
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_ACCESS_LIFETIME=5
JWT_REFRESH_LIFETIME=7
JWT_COOKIE_SECURE=True
JWT_COOKIE_SAMESITE=None
JWT_COOKIE_HTTP_ONLY=True
JWT_ACCESS_COOKIE_NAME=revalyt_access
JWT_REFRESH_COOKIE_NAME=revalyt_refresh

# -----------------------------------------------------------------------------
# Email (password reset, notifications)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@revalytiq.com

# -----------------------------------------------------------------------------
# Sentry
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# -----------------------------------------------------------------------------
# Optional Enhancements
# -----------------------------------------------------------------------------
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True
SESSION_COOKIE_SAMESITE=None
CSRF_COOKIE_SAMESITE=None
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SERVER_EMAIL=server@revalytiq.com
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs
